<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#8AB4D6"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "#5A1F1F"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_editTextZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#EFE3E3"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter Zipcode" />

        <Button
            android:id="@+id/id_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:text="Get Forecast"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "#8AB4D6"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:textColor = "#EFE3E3"
            android:text="Current Temp"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/id_imageCurrent"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/id_catchPhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#EFE3E3"
            android:layout_marginTop="12dp"
            android:text="Stupid Catch Phrase Thingy" />

        <TextView
            android:id="@+id/id_currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#EFE3E3"
            android:layout_marginTop="12dp"
            android:text="Current Time: " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background = "#924E9E"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_dayOneTime"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom='10dp' />

            <TextView
                android:id="@+id/id_dayOneHighTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/id_dayOneImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_dayOneLowTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_dayTwoTime"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/id_dayTwoHighTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/id_dayTwoImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_dayTwoLowTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft = "10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_dayThreeTime"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/id_dayThreeHighTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/id_dayThreeImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_dayThreeLowTemp"
                android:layout_width="match_parent"
                android:textColor = "#EFE3E3"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft = "10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_dayFourTime"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/id_dayFourHighTemp"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/id_dayFourImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_dayFourLowTemp"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft = "10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_dayFiveTime"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/id_dayFiveHighTemp"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/id_dayFiveImage"
                android:layout_width="65dp"
                android:layout_marginBottom = "10dp"
                android:layout_height="65dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_dayFiveLowTemp"
                android:textColor = "#EFE3E3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>